pipeline {
  agent {
    docker {
      image 'node:16-alpine'
      args '-u root' 
    }
  }
  stages {
    stage('Pull Docker Image') {
      steps {
        script {
          docker.image('node:16-alpine').pull()
        }
      }
    }

    stage('Test') {
      steps {
        sh 'node --version'
      }
    }
  }
}
